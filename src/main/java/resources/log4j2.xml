<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${hostName} %d{yy/MM/dd HH:mm:ss} %p %c %x: %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.open" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="com.open.HttpClient" level="info">
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="warn"/>
    </Loggers>
</Configuration>